# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newline ending every file
[*]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8

[*.js]
indent_size = 4

[Makefile]
indent_style = tab

[{packge.json}]
indent_size = 2
